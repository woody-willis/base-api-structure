{
    "name": "api-base",
    "version": "0.1.0",
    "description": "A base API project using Express, Knex, and MySQL",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch --clear-screen=false src/index.ts",
        "lint": "eslint .",
        "format": "prettier --write .",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest --coverage --coverage-reporters=lcov",
        "test:ci": "jest --coverage --coverage-reporters=text",
        "migrate": "knex migrate:latest",
        "docs": "jsdoc -r src ../README.md -d docs",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Woody Willis <woody@trainly.co.uk>",
    "license": "ISC",
    "lint-staged": {
        "*.{js,ts,cjs,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@pm2/io": "^6.1.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-limit": "^1.0.0",
        "helmet": "^7.1.0",
        "knex": "^3.1.0",
        "mysql2": "^3.11.0",
        "pino": "^10.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@eslint/js": "^9.39.2",
        "@faker-js/faker": "^8.4.1",
        "@jest/globals": "^29.7.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/knex": "^0.15.2",
        "@types/node-cron": "^3.0.11",
        "@types/supertest": "^6.0.3",
        "babel-jest": "^29.7.0",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.3",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.4",
        "pino-pretty": "^13.1.3",
        "prettier": "^3.7.4",
        "supertest": "^7.1.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1"
    }
}
